<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@drawable/background_material"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accountInfoContainer"
        android:gravity="start">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/profile_image_dimen"
            android:layout_height="@dimen/profile_image_dimen"
            android:paddingBottom="@dimen/textItemPadding"
            android:paddingTop="@dimen/textItemPadding" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAccountName"
            android:paddingBottom="@dimen/textItemPadding"
            android:paddingTop="@dimen/textItemPadding"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtEmail"
            android:paddingBottom="@dimen/textItemPadding"
            android:paddingTop="@dimen/textItemPadding"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>