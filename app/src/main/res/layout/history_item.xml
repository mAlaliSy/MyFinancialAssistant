<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtMonthSeparate"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/gray_600"
        android:gravity="center"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/textTitlePadding"
        android:layout_marginRight="@dimen/textTitlePadding"
        android:layout_marginTop="@dimen/textTitlePadding" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtHistoryDate"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="@dimen/textTitlePadding"
        android:layout_marginRight="@dimen/textTitlePadding"
        android:layout_marginTop="@dimen/cardPadding"
        android:layout_marginBottom="@dimen/cardPadding" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        android:layout_marginTop="@dimen/cardPadding"
        android:padding="@dimen/cardPadding"
        android:layout_marginBottom="@dimen/sectionMargin"
        android:id="@+id/historyItemCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtHistoryType"
                android:layout_columnSpan="2"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:paddingLeft="@dimen/cardPadding"
                android:paddingRight="@dimen/cardPadding"
                android:paddingBottom="@dimen/textTitlePadding"
                android:paddingTop="@dimen/textTitlePadding" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtHistoryCatSrc"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:paddingLeft="@dimen/cardPadding"
                    android:paddingRight="@dimen/cardPadding"
                    android:paddingBottom="@dimen/textTitlePadding"
                    android:paddingTop="@dimen/textTitlePadding"
                    android:layout_weight="1" />

                <TextView
                    android:text="TextView"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtHistoryCatSrcValue"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_gravity="fill"
                    android:paddingLeft="@dimen/cardPadding"
                    android:paddingRight="@dimen/cardPadding"
                    android:paddingBottom="@dimen/textTitlePadding"
                    android:paddingTop="@dimen/textTitlePadding"
                    android:layout_width="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="@string/amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:paddingLeft="@dimen/cardPadding"
                    android:paddingRight="@dimen/cardPadding"
                    android:paddingBottom="@dimen/textTitlePadding"
                    android:paddingTop="@dimen/textTitlePadding"
                    android:layout_weight="1" />

                <TextView
                    android:text="TextView"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtHistoryAmount"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_gravity="fill"
                    android:paddingLeft="@dimen/cardPadding"
                    android:paddingRight="@dimen/cardPadding"
                    android:paddingBottom="@dimen/textTitlePadding"
                    android:paddingTop="@dimen/textTitlePadding"
                    android:layout_width="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                android:text="@string/note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtHistoryNote"

                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:paddingLeft="@dimen/cardPadding"
                    android:paddingRight="@dimen/cardPadding"
                    android:paddingBottom="@dimen/textTitlePadding"
                    android:paddingTop="@dimen/textTitlePadding"
                    android:visibility="gone"
                    android:layout_weight="1" />

                <TextView
                    android:text="TextView"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtHistoryNoteValue"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_gravity="fill"
                    android:paddingLeft="@dimen/cardPadding"
                    android:paddingRight="@dimen/cardPadding"
                    android:paddingBottom="@dimen/textTitlePadding"
                    android:paddingTop="@dimen/textTitlePadding"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="2"
                android:background="@color/gray_400"
                android:layout_marginTop="@dimen/textTitlePadding"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_columnSpan="2"
                android:elevation="4dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_create_black_24dp"
                    android:id="@+id/ibtnEditHistoryRecord"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="@dimen/textTitlePadding"
                    android:contentDescription="@string/edit"
                    android:tint="@color/blue" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_delete_black_24dp"
                    android:id="@+id/ibtnDeleteHistoryRecord"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="@dimen/textTitlePadding"
                    android:contentDescription="@string/delete"
                    android:tint="@color/red" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>