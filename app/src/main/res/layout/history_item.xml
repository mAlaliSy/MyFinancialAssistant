<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        android:layout_marginTop="@dimen/sectionMargin">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:paddingTop="@dimen/cardPadding">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:padding="@dimen/textTitlePadding"
                android:layout_columnSpan="2"
                style="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:padding="@dimen/textTitlePadding"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                style="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:padding="@dimen/textTitlePadding"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_gravity="end" />

            <TextView
                android:text="@string/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:padding="@dimen/textTitlePadding"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                style="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:padding="@dimen/textTitlePadding"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_gravity="end" />

            <TextView
                android:text="@string/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:padding="@dimen/textTitlePadding"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                style="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:padding="@dimen/textTitlePadding"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_gravity="end" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="2"
                android:background="@color/gray_400"
                android:layout_marginTop="@dimen/textTitlePadding"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_columnSpan="2"
                android:elevation="4dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_create_black_24dp"
                    android:id="@+id/imageButton"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="@dimen/textTitlePadding"
                    android:tint="@color/gray_500" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:id="@+id/imageButton3"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="@dimen/textTitlePadding"
                    android:tint="@color/gray_500" />
            </LinearLayout>

        </GridLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>